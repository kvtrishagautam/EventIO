<%- include('includes/header') %>
<link rel="stylesheet" href="/stylesheets/eventmain.css" />
</head>

<body>
  <%- include('includes/navbar') %>

    <!-- hero starts here -->
    <section>
        <div class="hero">
            <div class="hero-img">
                <img src="./images/heroimgs/aleksandr-popov-vCbKwN2IXT4-unsplash.jpg" alt="img" />
            </div>
            <div class="hero-text">
                <h1>Empower your campus!</h1>
                <p>Unlock boundless opportunities for your talents and ambitions to thrive and manage your event
                    schedule with our dual-purpose platform.</p>
            </div>
        </div>
        <div class="hero-box-invi">
            <div class="hero-box">
                <div class="hero-box-event">
                    <h3>Looking for </h3>
                    <form action="">
                        <select name="event-type" id="event-type">
                            <option value="">Choose event type</option>
                            <option value=""></option>
                        </select>
                    </form>
                </div>
                <div class="hero-box-event">
                    <h3>Location</h3>
                    <form action="">
                        <select name="location" id="location">
                            <option value="">Choose Location</option>
                            <option value=""></option>
                        </select>
                    </form>
                </div>
                <div class="hero-box-event">
                    <h3>When</h3>
                    <form action="">
                        <select name="date" id="date">
                            <option value="Choose date and time">Choose date and time</option>
                            <option value=""></option>
                        </select>
                    </form>
                </div>
                <div class="hero-box-search">
                    <img src="./images/heroimgs/—Pngtree—search icon_4490393.png" alt="search">
                </div>
            </div>
        </div>
    </section>
    <!-- hero ends here -->

    <!-- event category starts here  -->

    <div class="event">
        <div class="event-head">
            <h3>
                <font color="black">Upcoming</font>
                <font color="#7848F4">Events</font>
            </h3>
            <div class="event-head-drop">
                    <select name="location" id="event-head">
                        <option value="">Weekdays</option>
                        <option value=""></option>
                    </select>
                        <select name="location" id="event-head">
                        <option value="">Event type</option>
                        <option value=""></option>
                    </select>
                    <select name="location" id="event-head">
                        <option value="">Category</option>
                        <option value=""></option>
                    </select>
            </div>
        </div>
        <div class="event-cat">
            <% for(let e of event){ %>

            <div class="event-cat-box">
                <img src="/images/events/jr-korpa-9XngoIpxcEo-unsplash.jpg" alt="event-img">
                <div class="event-cat-box-in">
                    <div class="event-cat-desc">
                        <h3><%=e.title %></h3>
                        <p><%= e.desc%></p>                       
                    </div>
                    <div class="event-cat-reg">
                        <a href="/event/<%=e.title %>/<%=e.event_id %>">Register</a>
                        <h4><%= e.start_day%></h4>
                    </div>
                </div>
            </div>
            <%} %>
        </div>
        <div class="event-cat-add">
            <h3>Load more..</h3>
        </div>

    </div>

    <!-- event category ends here  -->

    <!-- event create box starts here  -->

    <div class="event-box">
        <div class="event-box-img">
            <img src="./images/createeventimg/image 3.svg" alt="create logo">
        </div>
        <div class="event-box-text">
            <h2>Make your own event</h2>
            <p>Lorem ipsum dolor sit amet, dolorem atque veritatis consectetur ad ducimus vero, dolores unde
                est sint!</p>
            <div class="event-box-btn">
                Create Events
            </div>
        </div>

    </div>

    <!-- event create box ends here  -->


    <!-- footer starts here  -->
    <footer>
        <section class="footer">
            <div class="logos">
                <div class="logo" style="color: #fff;margin-top: 1.5rem;">Event <span class="logo-2">IO</span></div>
            </div>
            <div class="footer-footer">
                <div class="footer-mail">
                    <input type="email" placeholder="Enter your mail" class="foot-email">
                </div>
                <div class="footer-btn">
                    <p>Subscribe</p>
                </div>
            </div>

            <div class="footer-nav">
                <ul>
                    <li><a href="#">Home</a> </li>
                    <li><a href="#">About</a> </li>
                    <li><a href="#"> Services</a></li>
                    <li><a href="#">Get in touch</a> </li>
                    <li><a href="#">FAQs</a></li>
                </ul>
            </div>

            <hr>
            <div class="footer-foot">
                <div class="footer-bottom">
                    <div>English</div>
                    <div>French</div>
                    <div>Hindi</div>
                </div>
                <div class="footer-bottom" style="margin-left: 8rem;">
                    <img src="./images/logos/LinkedinLogo.svg" alt="LinkedinLogo">
                    <img src="./images/logos/InstagramLogo.svg" alt="InstagramLogo">
                    <img src="./images/logos/FacebookLogo.svg" alt="FacebookLogo">
                </div>
                <div class="footer-bottom">
                    <p>Non Copyrighted &#169; upload by EventIO </p>
                </div>

        </section>
    </footer>

    <!-- footer ends here  -->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


</body>

</html>