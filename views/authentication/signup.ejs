<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/stylesheets/signup.css">
</head>

<body>
    <div class="background"></div>
    <!-- signup page starts here -->

    <!-- to login -->
    <div class="signup">
        <div class="signup-left">
            <div class="signup-img">
                <img src="/images/login-signup/markus-spiske-UCbMZ0S-w28-unsplash.jpg" alt="img">
            </div>
            <div class="signup-img-txt">
                <h2>Welcome Back</h2>
                <p>To keep connected with us provide us with your information </p>
                <button><a href="/auth/login">Log In</a></button>
            </div>
        </div>
        <!-- sign up form  -->
        <form action="/auth/signup" class="signup-right" method="post">
            <div class="signup-txt">
                <h1>
                    <font color="black">Event</font>
                    <font color="7848F4"> IO </font>
                </h1>
                <h2>Sign Up to Eventio</h2>
            </div>
            <div class="signup-form">

                <label for="username">Username:</label>
                <input type="text" id="username" name="username" placeholder="Enter your username">

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Enter your email">

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Enter password">

                <label for="password">Password:</label>
                <input type="password" id="conf-password" name="confirm-password" placeholder="Confirm password">

                <button type="submit" class="form-sbmt">Sign Up</button>

                <p id="emailError" style="color: red; display: none;">Email is already registered.</p>
                <p id="passwordError" style="color: red; display: none;">Password must contain at least 8 characters, including uppercase, lowercase, and digits.</p>

                <h4 align="center">Or</h4>
                <!-- sign up with google  -->
                <div class="google">
                    <button>
                        <img src="/images/login-signup/search.png" alt="g-logo">
                        <p>Sign up with Google</p>
                    </button>
                </div>
            </div>

        </form>

        <script>
            document.getElementById('email').addEventListener('blur', async function() {
                const email = this.value;
                const response = await fetch(`/check-email?email=${email}`);
                const result = await response.json();
    
                if (result.exists) {
                    document.getElementById('emailError').style.display = 'block';
                } else {
                    document.getElementById('emailError').style.display = 'none';
                }
            });
    
            document.getElementById('signupForm').addEventListener('submit', function(event) {
                const emailError = document.getElementById('emailError').style.display;
                if (emailError === 'block') {
                    event.preventDefault();
                }
    
                const password = document.getElementById('password').value;
                const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d@$!%*?&]{8,}$/;
    
                if (!regex.test(password)) {
                    document.getElementById('passwordError').style.display = 'block';
                    event.preventDefault();
                } else {
                    document.getElementById('passwordError').style.display = 'none';
                }
            });
        </script>

    </div>
</body>

</html>