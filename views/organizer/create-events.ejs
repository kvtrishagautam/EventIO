<%- include('includes/header') %>
<link rel="stylesheet" href="/stylesheets/create-events.css" />
</head>

    <body>
        <%- include('includes/navbar') %>


            <section class="total_1">
                <div class="head3">Create Event</div>
                <div class="form">
                    <form action="/organizer/create-events" method="post">
                        <label for="title">Event Title</label>
                        <input type="text" id="title" name="title" placeholder="Enter your event Title">

                        <label for="venue">Event Venue</label>
                        <input type="text" id="venue" name="venue" placeholder="Enter your event Venue">

                        <div class="time-date">
                            <div class="time">
                                <label for="stime">Start Time</label>
                                <input type="time" id="stime" name="start_time">
                            </div>

                            <div class="time">
                                <label for="etime">End Time</label>
                                <input type="time" id="etime" name="end_time">
                            </div>
                        </div>

                        <div class="time-date">
                            <div class="date">
                                <label for="sdate">Start Date</label>
                                <input type="date" id="sdate" name="start_day">
                            </div>

                            <div class="date">
                                <label for="edate">End Date</label>
                                <input type="date" id="edate" name="end_day">
                            </div>
                        </div>
                    
                </div>
            </section>
    </body>

    </html>

    <!--Details_sec_ends-->

    <!--Details_sec_starts----------------------------------------------------------- */-->
    <section class="total_2">
        <div class="head4">Event Description</div>
        <div class="hero1">
            <label for="input-file" id="drope-area">
                <input type="file" accept="image/*" id="input-file" hidden>
                <div id="img-view">
                    <h3>Event Image</h3>
                    <img src="\images\create_event_uploadpic\508-icon.png">
                </div>
            </label><br>
        </div>
        <div class="abo">
            <h3>About</h3>
            <textarea placeholder="Type hear..." name="desc" cols="130" rows="15" required></textarea>

        </div>

    </section>
    <!--/*Description_sec_ends--------------------------------------------------------*/-->

    <section class="total_3">
        <button type="submit" class="animated-button">create event</button>
    </section>
    <!--/*button_starts--------------------------------------------------------*/-->
</form>

    <%- include('includes/footer') %>
        </body>

        </html>