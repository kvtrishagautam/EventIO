<%- include('includes/header') %>

    <link rel="stylesheet" href="/stylesheets/create-events.css">

</head>

<body>
    <%- include('includes/navbar') %>

    <div class="body">
        <!-- hamburg starts -->
        <div class="hamburg">
            <img src="/images/burger-menu-svgrepo-com.svg" alt="">
        </div>
        <!-- hamburg ends -->
        <!-- main menu starts here -->
        <div class="main-menu inactive">
            <div class="full" id="full">
                <div class="cross">
                    <img src="/images/cross-svgrepo-com.svg" alt="">
                </div>
                <p><span class="heading">Account Settings</span></p>
                <div class="list orgp">
                    <a href="/organizer/create-events">
                        <p>Create events</p>
                    </a>
                    <a href="/organizer/conducted-events">
                        <p>Conducted Events</p>
                    </a>
                </div>
            </div>
        </div>
        <!-- main menu ends here -->
        <div class="new-new">
            <section class="total_1">
                <div class="head3">Create Event</div>
                <div class="form">
                    <form action="/organizer/create-events" method="post">
                        <label for="title">Event Title</label>
                        <input type="text" id="title" name="title" placeholder="Enter your event Title" required>

                        <label for="venue">Event Venue</label>
                        <input type="text" id="venue" name="venue" placeholder="Enter your event Venue" required>
                        <div class="time-date">
                            <div class="date">
                                <label for="sdate">Start Date</label>
                                <input type="date" id="sdate" name="start_day" required>
                            </div>
                            <div class="date">
                                <label for="edate">End Date</label>
                                <input type="date" id="edate" name="end_day" required>
                            </div>
                        </div>
                        <div class="time-date">
                            <div class="time">
                                <label for="stime">Start Time</label>
                                <input type="time" id="stime" name="start_time" required>
                            </div>
                            <div class="time">
                                <label for="etime">End Time</label>
                                <input type="time" id="etime" name="end_time" required>
                            </div>
                        </div>

                </div>
            </section>
            <!--Details_sec_ends-->
            <!--image insertion----------------------------------------------------------- -->
            <section class="total_2">
                <div class="abo">
                    <h3>About</h3>
                    <textarea placeholder="Type here..." name="desc" cols="130" rows="15" required></textarea>
                </div>
            </section>
            <!--image insertion_ends---------------------------------------------------------->
            <section class="total_3">
                    <button type="submit" class="animated-button">Create Event</button>
            </section>
            </form>
        </div>
    </div>
    <!-- button_starts -------------------------------------------------------- -->
   
</body>

</html>